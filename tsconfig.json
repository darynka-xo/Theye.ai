{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2017", "DOM"],
    "skipLibCheck": true,
    "types": ["@figma/plugin-typings"],
    "outDir": "./",
    "isolatedModules": true,
    "noEmitOnError": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
